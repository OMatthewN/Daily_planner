<Window x:Class="DailyPlanner.FilterTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фильтр" Height="115" Width="250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Тип:" Grid.Row="0" Margin="0,0,5,0"/>
        <ComboBox x:Name="typeComboBox" Grid.Row="0" Grid.Column="1" Width="100">
            <ComboBoxItem Content="Работа"/>
            <ComboBoxItem Content="Учеба"/>
            <ComboBoxItem Content="Другое"/>
        </ComboBox>

        <Button Content="Применить" Grid.Row="2" Click="ApplyButton_Click" HorizontalAlignment="Left" Margin="6,15,0,-35"/>
        <Button Content="Отмена" Grid.Row="2" Click="CancelButton_Click" HorizontalAlignment="Right" Margin="0,15,10,-35" Width="60"/>
    </Grid>
</Window>
